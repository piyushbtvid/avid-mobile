<component name = "FadingBackground" extends="Rectangle">

<script type="text/brightscript" uri="pkg:/components/views/widgets/HeroContent/FadingBackground.brs" />

<interface>

  <field id="uri" type="string" onChange="OnBackgroundUriChange"/>
  <field id="ShadeOpacity" type="float" alias="shade.opacity"/>
  <field id="width" type="float" />
  <field id="height" type="float" />

</interface>

<children>

  <Rectangle color="0x000000" id="backgroundColor"/>
  <Poster id="oldBackground"  />
  <Poster id="background" loadHeight="1080" loadWidth="1920" width="680" height="680"
    opacity="0.0"  />
  <Rectangle id="shade" opacity="0.0"/>

  <Animation id="fadeoutAnimation" repeat="false" duration="0.5">
    <FloatFieldInterpolator id="oldbackgroundInterpolator" key="[0.0, 1.0]" keyValue="[1.0, 0.0]" fieldToInterp="oldBackground.opacity"/>
  </Animation>

  <Animation id="fadeinAnimation" repeat="false" duration="0.5">
    <FloatFieldInterpolator id="backgroundInterpolator" key="[0.0, 1.0]" keyValue="[0.0, 1.0]" fieldToInterp="background.opacity"/>
  </Animation>

</children>

</component>

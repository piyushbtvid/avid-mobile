<?xml version="1.0" encoding="utf-8"?>

<component name="AccountMenu" extends="BaseWidget">

    <script type="text/brightscript" uri="AccountMenu.brs" />
    <script type="text/brightscript" uri="pkg:/components/Utils/LocalStorage.brs" />

    <interface>
        <field id="content" type="assocArray" alwaysNotify="true" />
        <field id="itemSelected" type="int" alwaysNotify="true" onChange="isMyAccountMenuItemSelected" />
        <field id="leftNavEscape" type="boolean" alwaysNotify="true" />
        <field id="indexSelected" type="int" value = "0" alwaysNotify="true" />
    </interface>


    <children>
        <Poster id="profilePic" width="100" height="100" uri="pkg:/images/circle.png" translation="[150,60]">
            <Label id="profileShortName" color="#ff0000" width="100" height="100" vertAlign="center" horizAlign="center">
                <Font role="font" uri="pkg:/images/font/Montserrat-Regular.ttf" size="30" />
            </Label>
        </Poster>

        <Label id="nameLabel"  translation="[250,70]"  width="290" height ="50" color="#ffffff"  vertAlign="center" horizAlign="left" text="Ajit Pathak" >
            <Font role="font" uri="pkg:/images/font/Montserrat-Bold.ttf" size="28" />
        </Label>

        <Label id="emailLabel"  translation="[250,115]"  width="260" height ="30" color="#ffffff"  vertAlign="center" horizAlign="left" text="ajitg4557@gmail.com" >
            <Font role="font" uri="pkg:/images/font/Montserrat-Regular.ttf" size="22" />
        </Label>

        <MarkupList
            id="AccountMenuList"
            translation="[150, 200]"
            itemComponentName="AccountMenuItem"
            vertFocusAnimationStyle="floatingFocus"
            itemSize="[380, 100]"
            itemSpacing="[0, 10]"
            numRows="4"
            drawFocusFeedback="false"
        />
    </children>
</component>
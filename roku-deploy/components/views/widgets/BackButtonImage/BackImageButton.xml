<component name="BackImageButton" extends="Button" >

  <script type="text/brightscript" uri="pkg:/components/views/widgets/BackButtonImage/BackImageButton.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/sceneUtils.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/focusUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils/generalUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils/arrayUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/constants.brs" />
  
  <interface>
    <field id="btnViewHeight" type="integer" value="80" />
    <field id="updateButton" type="boolean" alwaysNotify="true" onChange="updateButtonUI" />
    <field id="label" type="string" alias="btnLabel.text" />
    <field id="focusBack" type="string" alias="btnFocusImage.uri" />
    <field id="unFocusBack" type="string" alias="btnUnFocusImage.uri" />
    <field id="icon" type="string" alias="btnIcon.uri" />
    <field id="iconWidth" type="integer" alias="btnIcon.width" />
    <field id="iconHeight" type="integer" alias="btnIcon.height" />
    <field id="fontsize" type="integer" value ="32" />
    <field id="fontType" type="string" value="MEDIUM" />
    <function name="changeButtonUI"  /> 
    <function name="setButtonFocus"  /> 
  </interface>

  <children>
    <Poster id="btnFocusImage"/>
    <Poster id="btnUnFocusImage" uri="pkg:/images/footprint.png" />
    <LayoutGroup id="detailsContainer" layoutDirection="horiz" vertAlignment="center" itemSpacings="[20]" translation="[20, 0]">
      <Poster id="btnIcon" />
      <Label id="btnLabel" >
      <Font role = "font" uri = "pkg:/images/font/Montserrat-Bold.ttf" size = "30" />
      </Label>
    </LayoutGroup>

  </children>

</component>

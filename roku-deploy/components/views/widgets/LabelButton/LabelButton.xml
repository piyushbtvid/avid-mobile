<component name="LabelButton" extends="Button" >

  <script type="text/brightscript" uri="pkg:/components/views/widgets/LabelButton/LabelButton.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/sceneUtils.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/focusUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils/generalUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils/arrayUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/constants.brs" />
  
  <interface>
    <field id="btnVieHeight" type="integer" />
    <field id="buttonConfig" type="assocArray" alwaysNotify="true" onChange="onButtonChange" />
    <field id="labelText" type="string" alias="itemLabel.text" />
  </interface>

  <children>

    <Group>
      <Rectangle id="focusBack"  translation="[4,4]"/>
      <Label id="itemLabel" horizAlign="center" vertAlign="center" wrap="true" lineSpacing="1" maxLines = "1">
        <Font role = "font" uri = "pkg://images/font/Montserrat-Bold.ttf" size = "24" />
      </Label>
    </Group>

  </children>

</component>

<?xml version="1.0" encoding="utf-8" ?>
<component name="NavItem" extends="Group">
  <script type="text/brightscript" uri="NavItem.brs" />

  <interface>
		<field id="width" type="float" onChange="updateLayout" />
		<field id="height" type="float" onChange="updateLayout" />
		<field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="focusDidChange" alwaysNotify="true" />
    <field id="rowFocusPercent" type="float" value="-1" onChange="focusDidChange" alwaysNotify="true" />
    <field id="focusPercent" type="float" onChange="focusDidChange" alwaysNotify="true" />
    <field id="rowListHasFocus" type="boolean" onChange="focusDidChange" alwaysNotify="true" />
    <field id="listHasFocus" type="boolean" onChange="focusDidChange" alwaysNotify="true" />


	</interface>
  
  <children>
 
  <Poster id="background" loadDisplayMode = "limitSize" uri="pkg://images/rounded-left.png" height="66" translation="[45, 0]"  blendColor = "#B87333"/>
  <Poster id="focusIcon" loadDisplayMode = "limitSize" height = "66" width="66" blendColor = "#B87333"/>

  <LayoutGroup id="itemGroup" layoutDirection="horiz" itemSpacings="[20]">
    <Poster id="itemPoster" width = "35" height = "35" loadDisplayMode="scaleToFit" />
    <Label id="itemTitle" color="#ffffff">
      <Font role="font" uri="pkg:/images/font/Montserrat-Regular.ttf" size="30" />
    </Label>
  </LayoutGroup>
    
  </children>
</component>
<component name="LoginWidget" extends="BaseWidget" >

  <script type="text/brightscript" uri="pkg:/components/views/widgets/LoginWidget/LoginWidget.brs" />
  <script type="text/brightscript" uri="pkg:/components/Services/TVService.brs" />
  <script type="text/brightscript" uri="pkg:/components/Services/APIProvider.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/LocalStorage.brs" />


  <interface>
    <field id="backPressed" type="boolean" alwaysNotify = "true" />
    <field id="confirmLogOut" type="boolean" alwaysNotify = "true" />
    <function name= "showErrorMessage" />
  </interface>
    
  <children>

    <Label
      id="title"
      horizAlign="center"
      color="0xffffff">
      <Font role = "font" uri = "pkg://images/font/Montserrat-Bold.ttf" size = "40"/>
    </Label>

    <Label
      id="inputTypeTitle"
      translation="[250, 260]"
      color="0xffffff">
      <Font role = "font" uri = "pkg://images/font/Montserrat-Bold.ttf" size = "28"/>
    </Label>

    <VoiceTextEditBox
      id="emailEditBox"
      translation="[250, 310]"
      width="1370"
      active="true"
      voiceEntryType="email"
      maxTextLength="75"
    />

    <VoiceTextEditBox
      id="passwordEditBox"
      translation="[250, 310]"
      secureMode="true"
      width="1370"
      voiceEnabled="true"
      voiceEntryType="password"
      maxTextLength="75"
      visible="false"
    />

    <DynamicKeyboard
      id="keyboard"
      translation="[250, 420]"
      hideTextBox="true"
    />

    <LabelButton
      id="continueButton"
    />

  <LayoutGroup id = "layoutButtonGroup" layoutDirection = "horiz" itemSpacings = "[10]" translation = "[730, 1000]" >
    <LabelButton id = "forgotButton" />
    <Rectangle id = "buttonSeparator" height = "25" width = "5"  />
    <LabelButton id = "signupButton" />
  </LayoutGroup>

  </children>

</component>

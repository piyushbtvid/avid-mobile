<component name="LiveListTile" extends="BaseWidget">
    <script type="text/brightscript" uri="pkg:/components/views/rows/LiveListTile.brs" />


    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="rowFocusPercent" type="float" value="-1" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="rowListHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
        <!-- <field id="itemHasFocus" type="boolean" onChange="onGetfocus" /> -->
    </interface>

    <children>

    <Poster id="focusImage" visible = "false" uri = "pkg://images/navFocus.png" blendColor = "#FF0000" loadDisplayMode ="limitSize" />

    <Group id = "navigationGroup" >
      <Poster id="backImg" loadDisplayMode ="limitSize"/>
      <Poster id="icon"   loadDisplayMode ="ScaleToFit" />
      <LayoutGroup layoutDirection = "vert" itemSpacings = "[15]" translation="[20,30]">
        <Label id="timeSlot" horizAlign="center" vertAlign="center" color="#ffffff">
          <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "20" />
        </Label>
        <Label id="itemLabel" horizAlign="center" vertAlign="center" color="#ffffff">
          <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "20" />
        </Label>
      </LayoutGroup>
    </Group>

    </children>
</component>

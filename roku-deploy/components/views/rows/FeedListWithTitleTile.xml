<component name="FeedListWithTitleTile" extends="BaseWidget">
    <script type="text/brightscript" uri="pkg:/components/views/rows/FeedListWithTitleTile.brs" />


    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="rowFocusPercent" type="float" value="-1" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="rowListHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
        <!-- <field id="itemHasFocus" type="boolean" onChange="onGetfocus" /> -->
    </interface>

    <children>

      <Group id="scaledElements">

        <Rectangle id= "backRect" color = "#3c3c3c" translation ="[30, 50]"/>
        <Poster id="background" loadDisplayMode = "limitSize" translation ="[30, 50]"/>
 
        <LayoutGroup id="metadataGroup" itemSpacings="[0,20]"  layoutDirection="vert">
          <Label id="lblTitle" color="#EAE3C9" ellipsizeOnBoundary="true" width= "267" horizAlign = "left" >
            <Font role = "font" uri = "pkg:/images/font/Montserrat-Bold.ttf" size = "22" />
          </Label>
          <LayoutGroup id = "interactionButtons" layoutDirection="horiz" itemSpacings="[0]" >
            <Label id="ratingName"  color="#EAE3C9" ellipsizeOnBoundary="true" width= "200" horizAlign = "left" >
              <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "15" />
            </Label>
            <Label id="uploadedYear" color="#EAE3C9" ellipsizeOnBoundary="true" width= "200" horizAlign = "left" >
              <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "15" />
            </Label>
          </LayoutGroup>
        </LayoutGroup>

          <Rectangle id = "totalDurationBar" visible = "false" height = "7" translation = "[0,208]" color = "#FFFFFF99" />
          <Rectangle id = "progressBar" visible = "false" height = "7" translation = "[0,208]" color = "#FF0000" />

      </Group>

    </children>
</component>

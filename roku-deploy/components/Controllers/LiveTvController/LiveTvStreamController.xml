<component name="LiveTvStreamController" extends="BaseController">

  <script type="text/brightscript" uri="pkg:/components/Controllers/LiveTvController/LiveTvStreamController.brs" />
  <script type="text/brightscript" uri="pkg:/components/Services/TVService.brs" />
  <script type="text/brightscript" uri="pkg:/components/Services/APIProvider.brs" />
  <script type="text/brightscript" uri="pkg:/components/Utils/LocalStorage.brs" />


  <interface>
    <field id="channels" type="node" />
    <field id="currentChannel" type="integer" value="0" />
    <field id="downNavEscape" type="boolean" alwaysNotify = "true" />
  </interface>
  
  <children>
    
    <Video id="liveVideo" width="1920" height="1080" enableTrickPlay="false" enableUI="false" />
    

    <Group id= "liveDataGrp">
      <Poster uri="pkg:/images/gradientColor.png" height ="1080" width="1920" loadSync="true" />
      <Poster id="upArrow" uri="pkg:/images/uparrow.png" loadSync="true" />

      <LayoutGroup id="timeIndicators" layoutDirection="horiz" translation="[400,170]" itemSpacings="[110,0]">
        <Label text="9:00AM" color="#FFFFFF">
            <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "20" />
        </Label>
        <Label text="9:30AM" color="#FFFFFF">
            <Font role = "font" uri = "pkg:/images/font/Montserrat-Regular.ttf" size = "20" />
        </Label>
      </LayoutGroup>

        <RowList
          id="channelList"
          itemComponentName="LiveListTile"
          itemSize="[1920,150]"
          showRowLabel="[false]"
          itemSpacing="[0, 15]"
          rowItemSpacing="[[10,0]]"
          numRows="80"
          showRowCounter="[false]"
          rowItemSize="[[273,150]]"
          drawFocusFeedback = "true"
          rowFocusAnimationStyle="floatingFocus"
          translation="[130, 220]"
        />   
    </Group>  
    <Timer id ="epgTimer" repeat="true" duration="10"/>
  </children>
</component>
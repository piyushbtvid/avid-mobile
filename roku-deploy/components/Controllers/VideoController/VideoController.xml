<component name="VideoController" extends="BaseController">

<script type="text/brightscript" uri="pkg:/components/Controllers/VideoController/VideoController.brs" />
<script type="text/brightscript" uri="pkg:/components/Services/TVService.brs" />
<script type="text/brightscript" uri="pkg:/components/Services/APIProvider.brs" />
<script type="text/brightscript" uri="pkg:/components/Utils/LocalStorage.brs" />

<interface>
    <field id="backFromAds" type="bool" onChange="backFromAdsFun" alwaysNotify="true" />
</interface> 

<children>

    <Rectangle
        color="#000000"
        width="1920"
        height="1080"
    />

    <Video id="video" width="1920" height="1080" visible="false"/>
    <Label id = "videoTitle" color = "#ffffff" visible="false" translation="[50,35]" width="700" wrap="true" NumLines="2">
      <Font role = "font" uri = "pkg:/images/font/Montserrat-Bold.ttf" size = "50"/>
    </Label>
    <Rectangle id="feedlistBack" color="#00000080" width="1920" height="1080"  visible="false">
    <RowList
        id="feedsList"
        visible ="false"
        itemComponentName="FeedListWithTitleTile"  
        translation="[65,1350]"      
        itemSize="[1790,370]"
        rowItemSize="[[382,214]]"
        itemSpacing="[-20, 0]"            
        rowLabelOffset="[[20,-20]]"
        rowItemSpacing="[[40,20]]"
        focusXOffset="[0]"
        showRowLabel="[true]"
        showRowCounter="[false]"
        numRows="1"            
        rowLabelColor="0xFFFFFFFF"
        vertFocusAnimationStyle="fixedFocus"
        rowFocusAnimationStyle= "floatingFocus"
        drawFocusFeedback="false"            
    />
    </Rectangle>


    <Animation 
        id="feedListAnimation"
        duration="1"
        repeat="false"
        easeFunction="linear" >
        <Vector2DFieldInterpolator 
            id = "feedListAnimation_interplotar"
            key="[0.0, 1.0]"
            keyValue="[ [65,700], [65,1300] ]"
        fieldToInterp="feedsList.translation" />
    </Animation>

    <Timer id ="countDownTimer" repeat="false" duration="5"/>

    <NextEpisodeUI id="NextEpisodeUI" visible="false"/>


    <Button
		id="ButtonPlay"
		focusBitmapUri="pkg:/images/tra1.png"
		iconUri="pkg:/images/tra1.png"
		focusedIconUri="pkg:/images/tra1.png"
		focusFootprintBitmapUri="pkg:/images/tra1.png"
	/>

	<Button
		id="ButtonPause"
		focusBitmapUri="pkg:/images/tra1.png"
		iconUri="pkg:/images/tra1.png"
		focusedIconUri="pkg:/images/tra1.png"
		focusFootprintBitmapUri="pkg:/images/tra1.png"
	/>

	<Timer id="playerButtonsHideTimer" repeat="false" duration="2" />
    <Timer id ="topMenuTimer" repeat="true" duration="10"/>
    <Timer id ="loadSubscriptioTimer" repeat="false" duration="1"/>
  </children>

</component>
<component name="ResetPasswordController" extends="BaseController">
    <script type="text/brightscript"
        uri="pkg:/components/Controllers/ResetPasswordController/ResetPasswordController.brs" />
    <script type="text/brightscript" uri="pkg:/components/Services/TVService.brs" />
    <script type="text/brightscript" uri="pkg:/components/Services/APIProvider.brs" />
    <script type="text/brightscript" uri="pkg:/components/Utils/LocalStorage.brs" />
    <interface>
        <field id="email" type="string" />
    </interface>

    <children>

        <Rectangle
            id="background"
            width="1920"
            height="1080"
            color="#000000"
        />

        <Rectangle
            id="resetCont"
            width="800"
            height="620"
            color="#161616"
        >
            <Label
                id="titleLabel"
                text="Forgot Password"
                vertAlign="center"
            >
                <Font
                    role="font"
                    uri="pkg:/images/font/Montserrat-Bold.ttf"
                    size="60"
                />
            </Label>

            <TextEditBox
                id="userEmail"
                height="75"
                width="600"
                translation="[100,180]"
                clearOnDownKey="false"
                hintText="Email address"
                maxTextLength="50"
                fontsize="35"
            />
            <LabelButton
                id="submitButton"
                btnWidth="600"
                btnHeight="81"
                labelHorizAlign="center"
                labelText="Submit"
                textFont="font:MediumSystemFont"
                focusedTextFont="font:MediumSystemFont"
                focusedTextColor="#ffffff"
                translation="[100,360]"
            />
            <Button
                id="loginButton"
                text="Go Back to Login"
                showFocusFootprint="false"
                focusFootprintBitmapUri=""
                focusBitmapUri="pkg://images/transBackground.png"
                textFont="font:SmallestSystemFont"
                focusedTextFont="font:SmallestSystemFont"
                iconUri=""
                focusedIconUri=""
                focusedTextColor="#FF0000"
                textColor="#87CEEB"
            />

        </Rectangle>

        <StandardKeyboardDialog
            id="signinKeyboard"
            visible="false"
            translation="[0,0]"
        />

        <Label
            id="msgLabel"
            visible="false"
            >
                <Font
                    role="font"
                    uri="pkg:/images/font/Montserrat-Bold.ttf"
                    size="30"
                />
            </Label>

    </children>

</component>